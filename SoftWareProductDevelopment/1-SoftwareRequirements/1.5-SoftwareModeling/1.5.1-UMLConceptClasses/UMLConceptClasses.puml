@startuml
skinparam ClassAttributeIconSize 0

' --- Класи, пов'язані з користувачем та безпекою ---
class Користувач {
  + userID : int
  + ім'я : string
  + рівеньДоходу : string
  + освіта : string
}

class Житло {
  + housingID : int
  + адреса : string
  + ціна : decimal
  + безпечнийРайон : boolean
  + робочийПростір : boolean
}

class Орендодавець {
  + providerID : int
  + назва : string
}

' --- Класи, пов'язані з науковою діяльністю ---
class НауковаСтаття {
  + articleID : int
  + заголовок : string
  + DOI : string
  + датаПублікації : date
}

class Резюме {
  + summaryID : int
  + текстРезюме : string
  + часГенерації : datetime
  + якістьОцінка : int
}

' --- Класи, пов'язані з їжею ---
class ЗамовленняЇжі {
  + orderID : int
  + статус : string
  + сума : decimal
}

class ПоживнаСуміш {
  + mixtureID : int
  + назва : string
  + калорійність : int
}

' --- Зв'язки ---
Користувач "1" -- "0..*" Житло : орендує/переглядає
Орендодавець "1" -- "1..*" Житло : надає
НауковаСтаття "1" -- "1" Резюме : має (генеровано) >
Користувач "1" -- "0..*" НауковаСтаття : шукає/читає
Користувач "1" -- "0..*" ЗамовленняЇжі : робить
ЗамовленняЇжі "1" -- "1..*" ПоживнаСуміш : містить

@enduml
